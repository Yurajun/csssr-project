.body-p_indent
	text-indent 3px

.footer-ul
	margin-top 15px
	display flex
	justify-content flex-start

.footer-ul__li
	margin-right 20px

.radio + label 
	cursor pointer

.radio__labal
	font-family font-f__PTSansBold
	color text__color__label
	font-size 20px

.radio:not(checked) 
	position absolute
	opacity 0

.radio:not(checked) + label 
	position relative
	padding 0 0 0 35px

.radio:not(checked) + label:before
	content ''
	position absolute
	top -10px
	left -6px
	width 41px
	height 45px
	background url('images/input-radio.png')

.radio:not(checked) + label:after
	content ''
	position absolute
	top 3px
	left 3px
	width 23px
	height 27px
	border-radius: 50%
	background url('images/cheked.png')
	opacity 0
	transition all .2s

.radio:checked + label:after 
	opacity 1

.footer-date
	margin 75px 0 80px 0

.footer-date-wrapp
	display flex
	justify-content flex-start

.footer-date__div-p
	width 185px

.footer-date__div-input
	width 210px
	background url('images/border-bottom.png') left bottom no-repeat
	padding-bottom 6px